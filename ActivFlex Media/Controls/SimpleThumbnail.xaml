<UserControl x:Class="ActivFlex.Controls.SimpleThumbnail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ActivFlex.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="{StaticResource Thumbnail.Background.Color}">
        <Button x:Name="btnThumbnail" Style="{StaticResource thumbnailButton}" Click="Thumbnail_Click" MouseDoubleClick="Thumbnail_DoubleClick"/>
    </Grid>
</UserControl>
